<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--ShapeableImageView 4dp圆角-->
    <style name="ShapeRounded0Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="ShapeRounded4Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="ShapeRounded12Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <!--ShapeableImageView 圆形-->
    <style name="ShapeCircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabLayoutText10Style">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="TabLayoutText16Style">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TabLayoutText14Style">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>